<%- include('../layouts/layout', { title: 'Items' }) %>
<h1>Items</h1>
<a href="/items/new">Add New Item</a>
<table>
    <thead>
        <tr>
            <th>Name</th>
            <th>Description</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
        <% items.forEach(item => { %>
            <tr>
                <td><%= item.name %></td>
                <td><%= item.description %></td>
                <td>
                    <a href="/items/<%= item._id %>/edit">Edit</a>
                    <form action="/items/<%= item._id %>?_method=DELETE" method="POST" style="display:inline;">
                        <button type="submit">Delete</button>
                    </form>
                </td>
            </tr>
        <% }) %>
    </tbody>
</table>
